<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayoutIslem"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/textview_background"
        app:layout_constraintBottom_toTopOf="@+id/main_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewIslem"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="79dp"
            android:layout_marginBottom="78dp"
            android:hint="@string/islem_text"
            android:textColor="@color/button_orange"
            android:textColorHint="@color/button_orange"
            android:textSize="32sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextViewEdits" />

        <TextView
            android:id="@+id/textViewGecmis"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="378dp"
            android:textColor="@color/button_orange"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout

        android:id="@+id/main_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConstraintLayoutIslem">

        <LinearLayout
            android:id="@+id/islem_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_topla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_gray"
                android:text="+"
                android:textColor="@color/button_orange"
                android:textSize="24dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button_cikar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_gray"
                android:text="-"
                android:textColor="@color/button_orange"
                android:textSize="24dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button_Carp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_gray"
                android:text="*"
                android:textColor="@color/button_orange"
                android:textSize="24dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button_bol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_gray"
                android:text="/"
                android:textColor="@color/button_orange"
                android:textSize="24dp"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sati1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_orange"
                android:text="7"
                android:textColor="@color/blackish"
                android:textSize="18dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_orange"
                android:text="8"
                android:textColor="@color/blackish"
                android:textSize="18dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_orange"
                android:text="9"
                android:textColor="@color/blackish"
                android:textSize="18dp"
                app:cornerRadius="10dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/satir2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_orange"
                android:text="4"
                android:textColor="@color/blackish"
                android:textSize="18dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_orange"
                android:text="5"
                android:textColor="@color/blackish"
                android:textSize="18dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_orange"
                android:text="6"
                android:textColor="@color/blackish"
                android:textSize="18dp"
                app:cornerRadius="10dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/satir3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_orange"
                android:text="1"
                android:textColor="@color/blackish"
                android:textSize="18dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_orange"
                android:text="2"
                android:textColor="@color/blackish"
                android:textSize="18dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_orange"
                android:text="3"
                android:textColor="@color/blackish"
                android:textSize="18dp"
                app:cornerRadius="10dp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/satir4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_orange"
                android:text="0"
                android:textColor="@color/blackish"
                android:textSize="18dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button_ac"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_gray"
                android:text="AC/C"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="0.9"
                android:background="@drawable/ic_baseline_backspace_24"
                android:textSize="18dp"
                app:backgroundTint="@color/button_blue"
                app:cornerRadius="10dp"
                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>

        <Button
            android:id="@+id/button_hesapla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/button_gray"
            android:text="HESAPLA"
            android:textColor="@color/button_orange"
            android:textSize="18dp"
            app:cornerRadius="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>